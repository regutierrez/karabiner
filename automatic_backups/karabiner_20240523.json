          {
            "description": "Hyper Key (⌃⌥⇧⌘)",
            "manipulators": [
              {
                "description": "Caps Lock -> Hyper Key",
                "from": {
                  "key_code": "caps_lock"
                },
                "to": [
                  {
                    "key_code": "left_shift",
                    "modifiers": [
                      "left_command",
                      "left_control",
                      "left_option"
                    ]
                  }
                ],
                "to_if_alone": [
                  {
                    "key_code": "escape"
                  }
                ],
                "type": "basic"
              },
              {
                "type": "basic",
                "description": "Disable CMD + Tab to force Hyper Key usage",
                "from": {
                  "key_code": "tab",
                  "modifiers": {
                    "mandatory": [
                      "left_command"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "tab"
                  }
                ]
              }
            ]
          },
